# Root EditorConfig file
root = true

# Default settings
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_size = 4

# YAML & JSON
[*.{yml,yaml,json}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
